<ul>
    {{#submissions}}
        <li class="submission row bs-callout-default bs-callout {{_followUpState}} {{#updating}}updating{{/updating}} {{#hidden}}hidden{{/hidden}}">
            <div class="col-md-12">
                <span class="toggle-user-rsvp" {{data 'submission'}}><i class="fa {{user_rsvp}}"></i></span>
                <span class="label label-info">{{num_rsvp}}</span>&nbsp;
                {{^followUpState}}
                {{!--overdue tasks get a warning badge--}}
                    {{#overdue}}
                        <span class="label label-warning">{{ followUpDays }} <i class="fa fa-warning"></i></span>
                    {{/overdue}}
                    {{!--not overdue--}}
                    {{^overdue}}
                        <span class="label">{{ followUpDays }} <i class="fa fa-clock-o"></i></span>
                    {{/overdue}}
                    &nbsp;
                {{/followUpState}}
                <a href="/eventform?id={{id}}">{{ title }}</a>&nbsp;
                <span>{{ _duration }}</span>&nbsp;
                <span><small>Presented
                    by: {{#userPresenters}}{{>user_link}}{{/userPresenters}} {{#personPresenters}}{{>user_link}}{{/personPresenters}}</small>
                </span>&nbsp;
                {{#tags}}
                    <span class="label label-info"><i class="fa fa-tag"></i>&nbsp;{{ . }}</span>&nbsp;
                {{/tags}}
               {{ description }}

            </div>
        </li>
    {{/submissions}}
</ul>

